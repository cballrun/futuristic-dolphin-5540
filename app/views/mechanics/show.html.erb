<h1> Mechanic: <%= @mechanic.name %> </h1>

  Years of Experience: <%= @mechanic.years_of_experience %>

<% @rides.thrill_sort.each_with_index do |ride, index| %>
  <% if ride.open == true %>
    <li id="ride_<%=index %>" >
    <p>Working On: <%= ride.name %> </p>
    </li>
  <%end%>
<%end%>

<%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |f| %>
  <%= f.label :ride_id %>
  <%= f.number_field :ride_id %>
  <%= f.submit "Add Ride to Mechanic" %>
<% end %>